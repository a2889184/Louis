CC=g++
INC=-I /usr/include/SDL2
INC2=-I /home/louis/louis/ICG_Project/Source

CFLAFS= -std=c++11

Main: Main.o Window.o LdrFrame.o Frame.o RayTracer.o Camera.o Common.o HdrFrame.o ToneMapper.o
	${CC} ${CFLAFS} Main.o Window.o LdrFrame.o Frame.o RayTracer.o ${INC} ${INC2} `pkg-config --cflags --libs sdl2` -o main
Main.o: Main.cpp Lib.h LdrFrame.h Window.h Ray.h ToneMapper.h RayTracer.h
	${CC} ${CFLAFS} Main.cpp ${INC} ${INC2} -c
Common.o: Common.cpp Math/Vector3f.h
	${CC} ${CFLAFS} Common.cpp ${INC} ${INC2} -c
LdrFrame.o: LdrFrame.cpp CoreMath.h
	${CC} ${CFLAFS} LdrFrame.cpp ${INC} ${INC2} -c
HdrFrame.o: HdrFrame.cpp HdrFrame.h CoreMath.h
	${CC} ${CFLAFS} HdrFrame.cpp ${INC} ${INC2} -c
ToneMapper.o: ToneMapper.cpp CoreMath.h
	${CC} ${CFLAFS} ToneMapper.cpp ${INC} ${INC2} -c
RayTracer.o: RayTracer.cpp RayTracer.h Camera.h Intersection.h HdrFrame.h Ray.h
	${CC} ${CFLAFS} RayTracer.cpp ${INC} ${INC2} -c
Camera.o: Camera.h Ray.h
	${CC} ${CFLAFS} Camera.cpp ${INC} ${INC2} -c

clean:
	rm -f *.o
